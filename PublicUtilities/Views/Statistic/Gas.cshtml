    <div class="choose-green-btn">Газ</div>
    <a class="nav-link choose-gray-btn" asp-area="" asp-controller="Statistic" asp-action="Electricity">Електроенергія</a>

</div>
<div class="mian-frame">
    <div class="mian-frame-frame">
        <div class="main-text-frame">
            <p class="main-text-frame-header">Вітаємо на сторнці статистики</p>
            <p class="main-text-frame-text">
                На цій сторінці ви можете переглянути свою статистику щодо споживання газу.
            </p>
        </div>
        <div class="mian-frame-line"></div>
        <div class="graph-div">
            <p class="main-text-frame-text">
                <b>Графік</b>
            </p>
            <div class="graph">
                <canvas id="myChart" width="800" height="250"></canvas>
            </div>
        </div>
        <div class="mian-frame-line"></div>
        @foreach (var item in Model)
        {
            <p class="main-frame-text"><b>@item.PlacesOfResidence</b></p>
            <div class="main-table-frame">
                <table class="rounded">
                    <thead>
                        <tr>
                            <th>Показник</th>
                            <th>Дата</th>
                            <th>Ціна</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var newItem = item.DataPoints.OrderByDescending(i => DateTime.Parse(i.Date)).ToList();
                        }
                        @foreach (var statistic in newItem)
                        {
                            <tr>
                                <td>@statistic.Indicator м<sup>3</sup></td>
                                <td>@statistic.Date</td>
                                <td>@statistic.Price грн</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
