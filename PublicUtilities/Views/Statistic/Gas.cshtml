@using PublicUtilities.ViewModels
@model List<StatisticViewModel>

<head>
    <link rel="stylesheet" href="~/css/Statistic/Index.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var model = @Html.Raw(Json.Serialize(@Model));
        console.log(model);
        var ctx = document.getElementById('myChart').getContext('2d');

        var datasets = [];

        for (var i = 0; i < model.length; i++) {
            var color = 'rgba(' + Math.floor(Math.random() * 256) + ',' + Math.floor(Math.random() * 256) + ',' + Math.floor(Math.random() * 256) + ', 1)'
            var dataPoints = model[i].dataPoints;
            var dataset = {
                label: model[i].placesOfResidence,
                data: [],
                backgroundColor: color,
                borderColor: color,
                pointRadius: 2,
                borderWidth: 1,
                tension: 0.1,
            };

            for (var j = 0; j < dataPoints.length; j++) {
                dataset.data.push({
                    x: dataPoints[j].date,
                    y: dataPoints[j].indicator,
                    price: dataPoints[j].price,
                });
            }
            console.log(dataset);
            datasets.push(dataset);
        }

        var config = {
            type: 'line',
            data: {
                datasets: datasets
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.dataset.label},`;
                            },
                            afterLabel: function (context) {
                                const dataPoint = context.dataIndex;
                                return `Показник: ${context.formattedValue} m^3,\n`
                                    + `Ціна: ${context.dataset.data[dataPoint].price} грн,`;
                            },
                        },
                        bodyFont: {
                            size: 12,
                            family: 'Open Sans',
                            style: 'normal',
                        },
                    },
                    legend: {
                        labels: {
                            font: {
                                size: 12,
                                family: 'Open Sans',
                                style: 'normal',
                            }
                        }
                    }
                }
            }
        };

        var myChart = new Chart(ctx, config);
    });
</script>


